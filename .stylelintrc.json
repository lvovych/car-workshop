{
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [true, {
        "ignoreAtRules": ["extend", "tailwind", "apply"]
      }],
      "selector-pseudo-class-no-unknown": [true, {
        "ignorePseudoClasses": ["global"]
      }],
      "block-no-empty": true,
      "color-no-invalid-hex": true
    }
  }
  